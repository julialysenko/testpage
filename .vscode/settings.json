// Place your settings in this file to overwrite default and user settings.
{
    // =Editor
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.wrappingColumn": 120,
    "editor.rulers": [80, 120],

    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,

    // =Excluded files and folders
    "files.exclude": {
        // Folders
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.idea": true,
        "**/.sass-cache": true,
        "**/.c9revisions": true,
        "**/.settings": true,
        "**/.vscode": true,
        "**/.komodotools": true,
        "**/node_modules": true,
        "**/nbproject": true,
        "**/nbbuild": true,
        "**/nbdist": true,
        "**/$RECYCLE.BIN": true,

        // Files
        "**/.DS_Store": true,
        "**/.tmproj": true,
        "**/.submime-grunt.cache": true,
        "**/.project": true,
        "**/.cache": true,
        "**/*.esproj": true,
        "**/*.sublime-workspace": true,
        "**/*.komodoproject": true,
        "**/*.psd": true,
        "**/Thumbs.db": true,
        "**/ehthumbs.db": true,
        "**/Desktop.ini": true,
        "**/dwsync.xml": true,
        "**/nbactions.xml": true,
        "**/nb-configuration.xml": true
    },

    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.sass-cache/**": true,
        "**/dev/**": true,
        "**/dist/**": true,
        "**/node_modules/**": true,
        "**/src/vendor/**": true
    },

    // =CSS linting
    "css.validate": true,
    "css.lint.compatibleVendorPrefixes": "warning",
    "css.lint.vendorPrefix": "error",
    "css.lint.duplicateProperties": "error",
    "css.lint.emptyRules": "error",
    "css.lint.importStatement": "ignore",
    "css.lint.boxModel": "ignore",
    "css.lint.universalSelector": "warning",
    "css.lint.zeroUnits": "error",
    "css.lint.fontFaceProperties": "error",
    "css.lint.hexColorLength": "error",
    "css.lint.argumentsInColorFunction": "error",
    "css.lint.unknownProperties": "warning",
    "css.lint.ieHack": "error",
    "css.lint.unknownVendorSpecificProperties": "warning",
    "css.lint.propertyIgnoredDueToDisplay": "error",
    "css.lint.important": "warning",
    "css.lint.float": "ignore",
    "css.lint.idSelector": "warning",

    // =HTML formatting
    "html.format.indentInnerHtml": true,
    "html.format.endWithNewline": true,

    // =JSON schemas
    "json.schemas": [],

    // =LESS linting
    "less.validate": true,
    "less.lint.compatibleVendorPrefixes": "ignore",
    "less.lint.vendorPrefix": "error",
    "less.lint.duplicateProperties": "error",
    "less.lint.emptyRules": "error",
    "less.lint.importStatement": "ignore",
    "less.lint.boxModel": "ignore",
    "less.lint.universalSelector": "warning",
    "less.lint.zeroUnits": "error",
    "less.lint.fontFaceProperties": "error",
    "less.lint.hexColorLength": "error",
    "less.lint.argumentsInColorFunction": "error",
    "less.lint.unknownProperties": "warning",
    "less.lint.ieHack": "error",
    "less.lint.unknownVendorSpecificProperties": "warning",
    "less.lint.propertyIgnoredDueToDisplay": "error",
    "less.lint.important": "warning",
    "less.lint.float": "ignore",
    "less.lint.idSelector": "warning",

    // =SASS linting
    "sass.validate": true,
    "sass.lint.compatibleVendorPrefixes": "ignore",
    "sass.lint.vendorPrefix": "error",
    "sass.lint.duplicateProperties": "error",
    "sass.lint.emptyRules": "error",
    "sass.lint.importStatement": "ignore",
    "sass.lint.boxModel": "ignore",
    "sass.lint.universalSelector": "warning",
    "sass.lint.zeroUnits": "error",
    "sass.lint.fontFaceProperties": "error",
    "sass.lint.hexColorLength": "error",
    "sass.lint.argumentsInColorFunction": "error",
    "sass.lint.unknownProperties": "warning",
    "sass.lint.ieHack": "error",
    "sass.lint.unknownVendorSpecificProperties": "warning",
    "sass.lint.propertyIgnoredDueToDisplay": "error",
    "sass.lint.important": "warning",
    "sass.lint.float": "ignore",
    "sass.lint.idSelector": "warning",

    // =ESLint
    "eslint.enable": true,
    "eslint.options": {
        /* Options are set in .eslintrc.json
         *
         * For the list of all available options,
         * see: http://eslint.org/docs/user-guide/configuring
         */
    },

    // =MISC
    "javascript.validate.enable": false, // Backwards-compatibility
    "jshint.enable": false // Disabled in favor of ESLint
}
